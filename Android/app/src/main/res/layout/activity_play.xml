<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="60dp"
    android:id="@+id/play_main"
    tools:context=".PlayActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/for_game"
        android:name="iss.nus.edu.sg.ca.matchgame.GameFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        tools:context=".PlayActivity" />

    <Button
        android:id="@+id/btnShowLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Leaderboard"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/for_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.fragment.app.FragmentContainerView
    android:id="@+id/for_ad"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_marginBottom="16dp"
        android:layout_weight="1"/>


</LinearLayout>
